---
import GitHub from "./icons/GitHub.astro"
import Git from "./icons/Git.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Node from "./icons/Node.astro"
import Express from "./icons/Express.astro"
import JavaScript from "./icons/JavaScript.astro"
import HTML from "./icons/HTML.astro"
import CSS from "./icons/CSS.astro"
import MongoDB from "./icons/MongoDB.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import React from "./icons/React.astro"
import Sass from "./icons/Sass.astro"
import AWS from "./icons/AWS.astro"
import TypeScript from "./icons/TypeScript.astro"
import Vite from "./icons/Vite.astro"
import Vitest from "./icons/Vitest.astro"
import GCP from "./icons/GCP.astro"
import Figma from "./icons/Figma.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#21618C] text-white",
    icon: Tailwind,
  },
  NODE: {
    name: "Node Js",
    class: "bg-[#0B5345] text-white",
    icon: Node,
  },
  EXPRESS:{
    name: "Express Js",
    class: "bg-black text-white",
    icon: Express,
  },
  JAVASCRIPT:{
    name: "JavaScript",
    class: "bg-[#FCF3CF] text-black",
    icon: JavaScript,
  },
  HTML:{
    name: "HTML",
    class: "bg-[#FAD7A0] text-black",
    icon: HTML,
  },
  BOOTSTRAP:{
    name: "Bootstrap",
    class: "bg-[#BB8FCE] text-white",
    icon: Bootstrap,
  },
  CSS:{
    name: "CSS",
    class: "bg-[#AED6F1] text-black",
    icon: CSS,
  },
  MONGODB:{
    name: "MongoDB",
    class: "bg-[#D5F5E3] text-black",
    icon: MongoDB,
  },
  SASS:{
    name: "Sass",
    class: "bg-[#EBDEF0] text-black",
    icon: Sass,
  },
  REACT:{
    name: "React",
    class: "bg-[#1A5276] text-white",
    icon: React,
  },
  AWS:{
    name: "Amazon Web Services",
    class: "bg-[#F4F6F6] text-black",
    icon: AWS,
  },
  TYPESCRIPT:{
    name: "TypeScript",
    class: "bg-[#003159] text-white",
    icon: TypeScript,
  },
  GIT:{
    name: "Git",
    class: "bg-[#F6DDCC] text-black",
    icon: Git,
  },
  GITHUB:{
    name: "GitHub",
    class: "bg-black text-white",
    icon: GitHub,
  },
  VITE:{
    name: "Vite",
    class: "bg-black text-white",
    icon: Vite,
  },
  VITEST:{
    name: "Vitest",
    class: "bg-[#0B5345] text-white",
    icon: Vitest,
  },
  GCP:{
    name: "Google Cloud Platform",
    class: "bg-[#F7F9F9] text-black",
    icon: GCP,
  },
  FIGMA:{
    name: "Figma",
    class: "bg-[#F7F9F9] text-black",
    icon: Figma,
  },
}
const SKILLS = [
  {
    tags: [TAGS.HTML, TAGS.CSS, TAGS.TAILWIND, TAGS.SASS, TAGS.BOOTSTRAP, TAGS.JAVASCRIPT, TAGS.TYPESCRIPT, TAGS.REACT, TAGS.NEXT, TAGS.NODE, TAGS.EXPRESS,TAGS.MONGODB, TAGS.GIT, TAGS.GITHUB, TAGS.VITE, TAGS.VITEST, TAGS.GCP, TAGS.AWS, TAGS.FIGMA],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    SKILLS.map(({ tags}) => (
    <div class="flex flex-wrap mt-2">
        <ul class="flex flex-wrap mb-2 gap-x-2 gap-y-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xl ${tag.class} py-2 px-3 `}
              >
                <tag.icon class="size-6" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
    </div>
    ))
  }
</div>



